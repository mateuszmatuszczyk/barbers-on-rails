<%= form_with(model: service, local: true) do |form| %>
 
<div class="form-group">
    <%= form.label :service_name %>
    <%= form.text_field :service_name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :service_description %>
    <%= form.text_field :service_description, class: "form-control" %>
  </div>

 <div class="form-group">
    <%= form.label :service_duration %>
    <%= form.number_field :service_duration, class: "form-control" %>
  </div>

 <div class="form-group">
    <%= form.label :service_price %>
    <%= form.text_field :service_price, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-default"%>
  </div>
<% end %>
