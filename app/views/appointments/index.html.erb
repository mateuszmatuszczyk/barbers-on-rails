<p id="notice"><%= notice %></p>

<div class="title-container">
  <h1>Appointments</h1>
</div>
<div class="row">
  <div class="col-lg-6 col-md-offset-3 text-center">
    <%= link_to 'New Appointment', new_customer_appointment_path(current_user.id), :class => 'btn btn-default'  %>
    </br>
    </br>
  </div>
</div>


<div class="elements">
  <% @appointments.each do |appointment| %>
  <%= link_to appointment_path(appointment), :action=> "go" do %>
  <div class="element">
    <div class="thumbnail">
      <div class="caption">
        <h2><%= appointment.appointment_date.strftime("%m-%d-%Y") %></h2>
        <p><strong>Barber: </strong></br><%= appointment.barber.barber_name %></p>
        <p><strong>Time: </strong></br><%= appointment.appointment_time.strftime("%H:%M") %></p>
        <p><strong>Status: </strong></br><%= appointment.status %></p>
        <p><strong>Services: </strong></br>
          <% appointment.services.each do |service| %>
          <p><%= service.service_name %></p>
          <% end %>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>



