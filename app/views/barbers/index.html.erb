<p id="notice"><%= notice %></p>

<div class="title-container">
  <h1>Barbers</h1>
</div>

<div class="elements">
  <% @barbers.each do |barber| %>
  <div class="element">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= link_to (barber.barber_name), barber_path(barber) %></h3>
        <p><%= barber.barber_bio %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% if current_user.admin? %>
<div class="row">
  <div class="col-lg-6 col-md-offset-3 text-center">
    <%= link_to 'New Barber', new_barber_path, :class => 'btn btn-default' %>

    </br>
  </div>
</div>
<% end %>
