
<div class="row">
  <div class="container col-lg-6 col-md-offset-3 text-center">
    <%= image_tag ( @barber.barber_photo_path) %>
      <div class="title-container">
          <h1><%= @barber.barber_name%></h1>
        </div>
    <p>
      <strong>Barber Name:</strong></br>
      <%= @barber.barber_name %>
    </p>

    <p>
      <strong>Barber Bio:</strong></br>
      <%= @barber.barber_bio %>
    </p>

    

    <% if current_user.admin? %>
    <%= link_to 'Edit', edit_barber_path(@barber) %> |
    <% end %>
    <%= link_to 'Back', barbers_path %>

  </div>
</div>