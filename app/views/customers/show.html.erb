<div class="title-container">
  <h1><%= @customer.customer_name%>'s Profile</h1>
</div>
<div class="row">
  <div class="container col-lg-6 col-md-offset-3 text-center">
    <div class="elements">
      <div class="element">

        <h3><%= @customer.customer_name %></h3>
        <p>

            <p>
                <strong>Customer Avatar:</strong></br>
                <%= @customer.customer_photo_path %>
              </p>
          <p>
            <strong>Customer Name:</strong></br>
            <%= @customer.customer_name %>
          </p>
          <p>
            <strong>Customer Number:</strong></br>
            <%= @customer.customer_number %>
          </p>

          <%= link_to 'Edit Profile', edit_customer_path(@customer), :class => 'btn btn-default'  %>
      </div>
    </div>
  </div>
</div>